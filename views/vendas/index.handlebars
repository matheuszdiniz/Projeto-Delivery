<h4 class="fw-bold mb-4">💹 Vendas Realizadas</h4>
<div class="card shadow-sm mb-4">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active">Vendas</a>
      </li>
      <li class="nav-item">
        <a href="/vendas/nova" class="nav-link">➕ Nova</a>
      </li>
    </ul>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        
        <thead>
          <tr>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Taxa</th>
            <th>Margem</th>
            <th>Data</th>
            <th>Ações</th>
          </tr>
        </thead>
        {{#each vendas}}
        <tbody>
            <tr>
              <td>{{cliente}}</td>
              <td>{{formataMoeda venda}}</td>
              <td>{{formataMoeda taxa}}</td>
              <td>{{formataPorcentagem margem}}</td>
              <td>{{data}}</td>
              <td class="text-center">
                <a href="/vendas/edit/{{_id}}" id="{{_id}}" class="btn btn-outline-warning btn-sm">✏️ Editar</a>
                <form method="POST" action="/vendas/deletar/{{_id}}" class="d-inline">
                  <button type="submit" class="btn btn-outline-danger btn-sm">🗑️ Deletar</button>
                </form>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="7" class="text-center">Não há Vendas Cadastradas</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
    <div class="d-flex justify-content-center gap-1 mt-4 mb-4" id="pagination">
  {{#if (gt pages 1)}}
    <a href="?page=1" class="btn btn-outline-secondary btn-slim m-1 {{#if (eq current 1)}}disabled{{/if}}">«</a>
    <a href="?page={{subtract current 1}}" class="btn btn-outline-secondary btn-slim m-1 {{#if (eq current 1)}}disabled{{/if}}">‹</a>
    <span class="btn btn-secondary btn-slim disabled m-1">{{current}}</span>
    <a href="?page={{add current 1}}" class="btn btn-outline-secondary btn-slim m-1 {{#if (eq current pages)}}disabled{{/if}}">›</a>
    <a href="?page={{pages}}" class="btn btn-outline-secondary btn-slim m-1 {{#if (eq current pages)}}disabled{{/if}}">»</a>
  {{/if}}
</div>

</div>



<style>
