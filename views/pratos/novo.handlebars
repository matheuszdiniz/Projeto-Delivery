{{#each erros}}
<div class="alert-container"><h4 class="alert-text">{{texto}}</h4></div>
{{/each}}

<h1 class="titulo">üìù Cadastrar Novo Prato</h1>
<div class="card-personalizada">
    <div class="card-body-personalizada">
        <form action="/pratos/novo" method="POST">
            <div class="form-row-personalizada">
                <div class="form-group-10">
                    <label for="nome">Nome: </label>
                    <input type="text" name="nome" placeholder="Nome do Prato" class="input-texto" required>
                </div>
                <div class="form-group-2">
                    <label class="invisivel">Adicionar</label>
                    <button class="botao-adicionar" type="button" onclick="criarNovoIngrediente();calcularCusto();">+ Ingrediente</button>
                </div>
            </div>

            <div class="form-row-personalizada ingrediente">
                <div class="form-group-4">
                    <label for="ingrediente">Ingredientes: </label>
                    <select class="input-select produto" name="ingredientes" onchange="calcularCusto()">
                        {{#each produtos}}
                        <option value="{{descricao}}|{{_id}}">{{descricao}} - R${{custo}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group-3">
                    <label for="quantidade">Quantidade: </label>
                    <input type="text" name="qtdIngrediente" class="input-texto quantidade" onchange="calcularCusto()" placeholder="0" required>
                </div>
                <div class="form-group-3">
                    <label for="custo">Custo Ingrediente: </label>
                    <input type="text" class="input-texto custo" name="custoIngrediente" placeholder="0" onchange="calcularCusto()" required>
                </div>
                <div class="form-group-2">
                    <label class="invisivel">Deletar</label>
                    <button type="button" onclick="calcularCusto();" class="botao-deletar deletarIg">- Ingrediente</button>
                </div>
            </div>

            <div class="ingredientes"></div>

            <div class="form-row-personalizada">
                <div class="form-group-3">
                    <label for="custoFinal">Custo Produto: </label>
                    <input type="text" id="custoFinal" class="input-texto" name="custoFinal" placeholder="0" onchange="calcularMargem()" required>
                </div>
                <div class="form-group-3">
                    <label for="venda">Venda: </label>
                    <input type="text" id="venda" class="input-texto" name="valorPrato" placeholder="0" onchange="calcularMargem()" required>
                </div>
                <div class="form-group-3">
                    <label for="markup">Markup (%):</label>
                    <input type="text" id="markup" class="input-texto" name="markupPrato" placeholder="0" onchange="vendaMarkup()" required>
                </div>
                <div class="form-group-3">
                    <label for="margem">Margem (%):</label>
                    <input type="text" id="margem" class="input-texto" name="margemPrato" placeholder="0" required>
                </div>
            </div>

            <div class="form-row-personalizada">
                <div class="form-group-4">
                    <button type="submit" class="botao-enviar">Enviar Prato!</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="/js/PratoCalculator.js"></script>