@media (max-width: 768px) {
  .table-responsive {
    margin-top: 20px;
    overflow-x: auto; /* Garante a rolagem horizontal */
  }

  .table th, .table td {
    font-size: 12px;
    padding: 8px 10px;
  }

  .btn-sm {
    font-size: 12px;
    padding: 3px 8px;
  }
}

