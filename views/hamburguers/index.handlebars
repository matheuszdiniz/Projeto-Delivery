<h4 class="fw-bold mb-4">üìä Pratos</h4>
<div class="card shadow-sm mb-4">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active">Pratos</a>
      </li>
      <li class="nav-item">
        <a href="hamburguers/novo" class="nav-link">Novo</a>
      </li>
    </ul>
  </div>
    {{#each hamburguers}}
  <div class="card-body" style="border-bottom: 1px solid #bdbdbd;">
    <div class="table-responsive">
        <div class="card-head"><h4 class="fw-bold mb-4">{{nome}}</h4></div>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Custo</th>
          </tr>
        </thead>
        <tbody>
          {{#each ingredientes}}
            <tr>
              <td>{{this}}</td>
              <td>{{lookup ../quantidade @index}}</td>
              <td>R${{lookup ../custo @index}}</td>
            </tr>
          {{else}}
            <tr>
              <td colspan="7" class="text-center">N√£o h√° produtos cadastrados</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <table class="table" style="margin-top: 10px;">
        <tbody>
            <tr>
              <td><strong>Custo Total:</strong> R${{custoFinal}}</td>
              <td><strong>Pre√ßo de Venda:</strong> R${{venda}}</td>
              <td><strong>Markup:</strong> {{markup}}%</td>
              <td><strong>Margem:</strong> {{margem}}%</td>
              <td><a href="/hamburguers/edit/{{_id}}" class="btn btn-sm btn-outline-warning">Editar</a></td>
              <td>
                <form method="POST" action="/hamburguers/deletar/{{_id}}">
                  <button type="submit" class="btn btn-sm btn-outline-danger">Deletar</button>
                </form>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
    {{/each}}
</div>


<style>
.card {
  border-radius: 8px;
  margin-bottom: 20px;
} 

.card-header {
  background-color: #f8f9fa;
  border-bottom: 2px solid #ddd;
}

.nav-tabs .nav-item .nav-link {
  padding: 10px 15px;
  font-size: 16px;
}

/* Tabela de produtos */
.table {
  width: 100%;
  margin-bottom: 0;
  border-collapse: collapse; /* Remove espa√ßo entre as bordas */
}

.table th, .table td {
  text-align: center;
  padding: 12px 15px;
  border: 1px solid #ddd; /* Linha mais fina */
}

.table th {
  background-color: #f8f9fa;
  font-weight: bold;
}

.table td {
  font-size: 14px;
}

/* Estilo de linhas quando passa o mouse */
.table tr:hover {
  background-color: #f1f1f1;
}

/* Bot√µes */
.btn-sm {
  font-size: 14px;
  padding: 5px 10px;
}

.btn-outline-warning {
  color: #ffc107;
  border-color: #ffc107;
}

.btn-outline-danger {
  color: #dc3545;
  border-color: #dc3545;
}

